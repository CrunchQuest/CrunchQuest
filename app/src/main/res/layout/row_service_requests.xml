<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_service"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="8dp"
    android:layout_margin="8dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_serviceRowRequest"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:civ_circle_background_color="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:id="@+id/title_serviceRowRequest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-black"
        android:text="TITLE"
        android:textColor="@color/dark_blue"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_serviceRowRequest"
        app:layout_constraintTop_toTopOf="parent" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/descriptionTextView_serviceRowRequest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:maxHeight="60dp"
        android:text="Description"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_serviceRowRequest"
        app:layout_constraintTop_toBottomOf="@+id/title_serviceRowRequest" />

    <TextView
        android:id="@+id/priceTextView_serviceRowRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Price"
        android:textColor="#0C7A1E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/descriptionTextView_serviceRowRequest"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView_serviceRowRequest"
        app:layout_constraintVertical_bias="0.72" />

    <TextView
        android:id="@+id/categoryTextView_serviceRowRequests"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/orange_gold"
        android:fontFamily="sans-serif-condensed"
        android:padding="8dp"

        android:text="Category"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/priceTextView_serviceRowRequest" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>