<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/categoryTextView_serviceCreatedRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Category:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTextView_serviceCreatedRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:maxWidth="220dp"
        android:text="Title:"
        app:layout_constraintEnd_toStartOf="@+id/cardView_serviceCreatedRow"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryTextView_serviceCreatedRow" />

    <com.codesgood.views.JustifiedTextView
        android:id="@+id/descriptionTextView_serviceCreatedRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxHeight="40dp"
        android:text="Description:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView_serviceCreatedRow" />

    <TextView
        android:id="@+id/priceTextView_serviceCreatedRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:text="Price: Rp"
        android:textColor="#12810A"
        app:layout_constraintStart_toStartOf="@+id/descriptionTextView_serviceCreatedRow"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView_serviceCreatedRow" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_serviceCreatedRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/orange_gold"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/statusTextView_serviceCreatedRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="montserrat_light"
            android:padding="8dp"
            android:text="STATUS"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>