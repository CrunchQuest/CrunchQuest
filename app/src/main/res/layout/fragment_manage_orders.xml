<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.buyer.manage_order_fragments.OrdersFragment">

    <TextView
        android:id="@+id/textView_request_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request Order"
        android:textSize="18sp"
        android:padding="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_manage_request"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />

    <TextView
        android:id="@+id/textView_assist_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assist Order"
        android:textSize="18sp"
        android:padding="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_manage_assist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />
</LinearLayout>