<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Title of the booking item -->
        <TextView
            android:id="@+id/bookingTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Booking Title"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Status of the booking -->
        <TextView
            android:id="@+id/bookingStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Status: Confirmed"
            app:layout_constraintTop_toBottomOf="@id/bookingTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Date of the booking -->
        <TextView
            android:id="@+id/bookingDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date: 2024-09-21"
            app:layout_constraintTop_toBottomOf="@id/bookingStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
