<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stepThreeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Upload ID Image Button -->
    <Button
        android:id="@+id/buttonUploadID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Upload ID Image (Optional)"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ID ImageView -->
    <ImageView
        android:id="@+id/imageViewID"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="ID Image"
        app:layout_constraintTop_toBottomOf="@id/buttonUploadID"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Upload Selfie Image Button -->
    <Button
        android:id="@+id/buttonUploadSelfie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Upload Selfie Image (Optional)"
        app:layout_constraintTop_toBottomOf="@id/imageViewID"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Selfie ImageView -->
    <ImageView
        android:id="@+id/imageViewSelfie"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Selfie Image"
        app:layout_constraintTop_toBottomOf="@id/buttonUploadSelfie"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Information Text -->
    <TextView
        android:id="@+id/textInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Why you should upload your ID and selfie"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toBottomOf="@id/imageViewSelfie"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

