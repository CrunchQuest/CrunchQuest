<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- NestedScrollView inside the parent ConstraintLayout -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Inner ConstraintLayout inside NestedScrollView -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ViewPager2 for Banner Slider -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/bannerViewPager"
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Featured Requests Section Title -->
            <TextView
                android:id="@+id/titleFeaturedRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featured Requests"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/bannerViewPager"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" />

            <!-- ProgressBar for Featured Requests -->
            <ProgressBar
                android:id="@+id/featuredRequestsProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/titleFeaturedRequest"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" />

            <!-- See More Featured Requests -->
            <TextView
                android:id="@+id/seeMoreFeaturedRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See More"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/titleFeaturedRequest"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/tvEmptyFeaturedRequests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No featured requests available."
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/titleFeaturedRequest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

            <!-- SwipeRefreshLayout wrapping RecyclerView for Featured Requests -->
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayoutFeaturedRequests"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/titleFeaturedRequest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/titleServiceHeroes"
                android:layout_marginTop="8dp">

                <!-- RecyclerView for Featured Requests -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewFeaturedRequests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <!-- Service Heroes Section Title -->
            <TextView
                android:id="@+id/titleServiceHeroes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Heroes"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/swipeRefreshLayoutFeaturedRequests"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" />

            <!-- ProgressBar for Service Heroes -->
            <ProgressBar
                android:id="@+id/serviceHeroesProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/titleServiceHeroes"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" />

            <!-- See More Service Heroes -->
            <TextView
                android:id="@+id/seeMoreServiceHeroes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See More"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/titleServiceHeroes"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/tvEmptyServiceHeroes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No service heroes available."
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/titleServiceHeroes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayoutServiceHeroes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/titleServiceHeroes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/titleRecentActivity"
                android:layout_marginTop="8dp">

                <!-- RecyclerView for Service Heroes -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewServiceProviders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <!-- Recent Activity Section Title -->
            <TextView
                android:id="@+id/titleRecentActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Activity"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/swipeRefreshLayoutServiceHeroes"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" />

            <!-- ProgressBar for Recent Activity -->
            <ProgressBar
                android:id="@+id/recentActivitiesProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/titleRecentActivity"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" />

            <!-- See More Recent Activity -->
            <TextView
                android:id="@+id/seeMoreRecentActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See More"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/titleRecentActivity"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/tvEmptyRecentActivities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No recent activity available."
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/titleRecentActivity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp" />

            <!-- RecyclerView for Recent Activity -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewRecentActivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/titleRecentActivity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/titleOffering"
                android:layout_marginTop="8dp" />

            <!-- Offering Section Title -->
            <TextView
                android:id="@+id/titleOffering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offering"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewRecentActivity"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" />

            <!-- Promotion Banner -->
            <ImageView
                android:id="@+id/bannerPromotion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/titleOffering"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCreateRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_add_quest" />
</androidx.constraintlayout.widget.ConstraintLayout>

