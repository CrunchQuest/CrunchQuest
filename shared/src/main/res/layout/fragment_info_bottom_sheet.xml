<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/infoBottomSheetRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/textInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Why You Should Upload Your ID and Selfie"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginBottom="8dp" />

    <!-- Content -->
    <TextView
        android:id="@+id/textInfoContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uploading your ID and a selfie helps us verify your identity and ensures a secure and trustworthy community. Your information is kept confidential and is used solely for verification purposes."
        android:layout_marginBottom="16dp" />

    <!-- Close Button -->
    <Button
        android:id="@+id/buttonClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close" />

</LinearLayout>
